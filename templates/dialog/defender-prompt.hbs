<form class="mech-foundry defender-prompt-dialog">
  <div class="attack-warning">
    <p><strong>{{attackerName}}</strong> is attacking you with <strong>{{weaponName}}</strong>!</p>
  </div>

  <div class="form-group">
    <label>Choose Defense</label>
  </div>

  <div class="defense-options">
    {{#each options}}
    <div class="defense-option">
      <label class="radio-label">
        <input type="radio" name="defenseOption" value="{{this.id}}"
          {{#if @first}}checked{{/if}}/>
        <span class="option-name">{{this.name}}</span>
        {{#if this.level}}
        <span class="option-level">(+{{this.level}})</span>
        {{/if}}
        {{#if this.total}}
        <span class="option-total">(+{{this.total}})</span>
        {{/if}}
        {{#if (eq this.type "decline")}}
        <span class="option-warning">(Auto-fail MoS -3)</span>
        {{/if}}
      </label>
    </div>
    {{/each}}
  </div>

  <hr/>

  <div class="form-group">
    <label>Additional Modifiers</label>
    <input type="number" name="modifier" value="0"/>
  </div>
</form>
