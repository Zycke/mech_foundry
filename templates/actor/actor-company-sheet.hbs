<form class="{{cssClass}} mech-foundry company-sheet" autocomplete="off">

  {{!-- Company Header --}}
  <header class="sheet-header company-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="70" width="70" />
    <div class="header-fields">
      <h1 class="company-name">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Company Name" />
      </h1>
      <div class="company-summary">
        <div class="summary-field cbills-field">
          <label>C-Bills</label>
          <div class="cbills-display">
            <span class="cbills-value computed-value">{{system.cbills}}</span>
            {{#if editable}}
            <div class="cbills-controls">
              <button type="button" class="cbills-add" title="Add Funds"><i class="fas fa-plus"></i></button>
              <button type="button" class="cbills-remove" title="Remove Funds"><i class="fas fa-minus"></i></button>
            </div>
            {{/if}}
          </div>
        </div>
        <div class="summary-field">
          <label>Personnel</label>
          <span class="computed-value">{{totalPersonnel}}</span>
        </div>
        <div class="summary-field">
          <label>Monthly Expenses</label>
          <span class="computed-value">{{totalMonthlyExpenses}} C-Bills</span>
        </div>
        <div class="summary-field">
          <label>Reputation</label>
          <input type="text" name="system.reputation" value="{{system.reputation}}" class="reputation-input" />
        </div>
      </div>
    </div>
  </header>

  {{!-- Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="personnel">Personnel</a>
    <a class="item" data-tab="organization">Organization</a>
    <a class="item" data-tab="status">Status</a>
    <a class="item" data-tab="logistics">Logistics</a>
    <a class="item" data-tab="mtoe">MTOE</a>
    <a class="item" data-tab="assets">Assets</a>
    <a class="item" data-tab="finances">Finances</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- ==================== PERSONNEL TAB ==================== --}}
    <div class="tab" data-tab="personnel" data-group="primary">
      <div class="tab-content">

        {{!-- Crewmember Panel --}}
        <div class="personnel-type-panel">
          <div class="panel-header">
            <h4><i class="fas fa-cogs"></i> Crewmembers ({{crewmemberPersonnel.length}})</h4>
          </div>
          <div class="personnel-condensed-list">
            <div class="items-header personnel-header flexrow condensed-header">
              <div class="item-name flex2">Name</div>
              {{#each personnelSkills.crewmember}}
              <div class="item-field skill-col">{{this.label}}</div>
              {{/each}}
              <div class="item-field stat-col">HP</div>
              <div class="item-field stat-col">Rdy</div>
              <div class="item-field flex1">Dept</div>
              <div class="item-controls ctrl-col">Controls</div>
            </div>
            <ol class="item-list">
              {{#each crewmemberPersonnel}}
              <li class="item flexrow condensed-row" data-item-id="{{this._id}}">
                <div class="item-name flex2">
                  <a class="personnel-roll" title="Roll Skill Check">
                    <i class="fas fa-dice-d20"></i>
                    {{this.name}}
                  </a>
                </div>
                {{#each ../personnelSkills.crewmember}}
                <div class="item-field skill-col">{{lookup ../../system.skills this.key}}</div>
                {{/each}}
                <div class="item-field stat-col">{{this.system.health.value}}/{{this.system.health.max}}</div>
                <div class="item-field stat-col">{{this.system.readiness.value}}/{{this.system.readiness.max}}</div>
                <div class="item-field flex1">
                  {{#if this.system.assignment}}
                  <span class="assignment-tag">{{this.system.assignment}}</span>
                  {{else}}
                  <span class="unassigned">--</span>
                  {{/if}}
                </div>
                <div class="item-controls ctrl-col">
                  {{#if ../../editable}}
                  <a class="assign-department" title="Assign Department"><i class="fas fa-building"></i></a>
                  <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                  <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
                  {{/if}}
                </div>
              </li>
              {{/each}}
            </ol>
            {{#unless crewmemberPersonnel.length}}
            <p class="empty-notice">No crewmembers. Drag Personnel items here.</p>
            {{/unless}}
          </div>
        </div>

        {{!-- Infantry Panel --}}
        <div class="personnel-type-panel">
          <div class="panel-header infantry-header">
            <h4><i class="fas fa-crosshairs"></i> Infantry ({{infantryPersonnel.length}})</h4>
          </div>
          <div class="personnel-condensed-list">
            <div class="items-header personnel-header flexrow condensed-header">
              <div class="item-name flex2">Name</div>
              {{#each personnelSkills.infantry}}
              <div class="item-field skill-col">{{this.label}}</div>
              {{/each}}
              <div class="item-field stat-col">HP</div>
              <div class="item-field stat-col">Rdy</div>
              <div class="item-field flex1">Unit</div>
              <div class="item-controls ctrl-col">Controls</div>
            </div>
            <ol class="item-list">
              {{#each infantryPersonnel}}
              <li class="item flexrow condensed-row" data-item-id="{{this._id}}">
                <div class="item-name flex2">
                  <a class="personnel-roll" title="Roll Skill Check">
                    <i class="fas fa-dice-d20"></i>
                    {{this.name}}
                  </a>
                </div>
                {{#each ../personnelSkills.infantry}}
                <div class="item-field skill-col">{{lookup ../../system.skills this.key}}</div>
                {{/each}}
                <div class="item-field stat-col">{{this.system.health.value}}/{{this.system.health.max}}</div>
                <div class="item-field stat-col">{{this.system.readiness.value}}/{{this.system.readiness.max}}</div>
                <div class="item-field flex1">
                  {{#if this.system.assignment}}
                  <span class="assignment-tag">{{this.system.assignment}}</span>
                  {{else}}
                  <span class="unassigned">--</span>
                  {{/if}}
                </div>
                <div class="item-controls ctrl-col">
                  {{#if ../../editable}}
                  <a class="assign-unit" title="Assign Unit"><i class="fas fa-users"></i></a>
                  <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                  <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
                  {{/if}}
                </div>
              </li>
              {{/each}}
            </ol>
            {{#unless infantryPersonnel.length}}
            <p class="empty-notice">No infantry. Drag Personnel items here.</p>
            {{/unless}}
          </div>
        </div>

        {{!-- Pilot Panel --}}
        <div class="personnel-type-panel">
          <div class="panel-header pilot-header">
            <h4><i class="fas fa-jet-fighter"></i> Pilots ({{pilotPersonnel.length}})</h4>
          </div>
          <div class="personnel-condensed-list">
            <div class="items-header personnel-header flexrow condensed-header">
              <div class="item-name flex2">Name</div>
              {{#each personnelSkills.pilot}}
              <div class="item-field skill-col">{{this.label}}</div>
              {{/each}}
              <div class="item-field stat-col">HP</div>
              <div class="item-field stat-col">Rdy</div>
              <div class="item-field flex1">Unit</div>
              <div class="item-controls ctrl-col">Controls</div>
            </div>
            <ol class="item-list">
              {{#each pilotPersonnel}}
              <li class="item flexrow condensed-row" data-item-id="{{this._id}}">
                <div class="item-name flex2">
                  <a class="personnel-roll" title="Roll Skill Check">
                    <i class="fas fa-dice-d20"></i>
                    {{this.name}}
                  </a>
                </div>
                {{#each ../personnelSkills.pilot}}
                <div class="item-field skill-col">{{lookup ../../system.skills this.key}}</div>
                {{/each}}
                <div class="item-field stat-col">{{this.system.health.value}}/{{this.system.health.max}}</div>
                <div class="item-field stat-col">{{this.system.readiness.value}}/{{this.system.readiness.max}}</div>
                <div class="item-field flex1">
                  {{#if this.system.assignment}}
                  <span class="assignment-tag">{{this.system.assignment}}</span>
                  {{else}}
                  <span class="unassigned">--</span>
                  {{/if}}
                </div>
                <div class="item-controls ctrl-col">
                  {{#if ../../editable}}
                  <a class="assign-unit" title="Assign Unit"><i class="fas fa-users"></i></a>
                  <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                  <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
                  {{/if}}
                </div>
              </li>
              {{/each}}
            </ol>
            {{#unless pilotPersonnel.length}}
            <p class="empty-notice">No pilots. Drag Personnel items here.</p>
            {{/unless}}
          </div>
        </div>

        {{#unless personnel.length}}
        <p class="empty-notice">Drag Personnel items here to add them to the company.</p>
        {{/unless}}
      </div>
    </div>

    {{!-- ==================== ORGANIZATION TAB ==================== --}}
    <div class="tab" data-tab="organization" data-group="primary">
      <div class="tab-content">

        {{!-- Departments Section --}}
        <div class="org-section">
          <h3><i class="fas fa-sitemap"></i> Departments</h3>

          {{#each departments}}
          <div class="department-panel {{#if this.collapsed}}collapsed{{/if}}" data-department="{{this.name}}">
            <div class="department-header department-toggle" data-department="{{this.name}}">
              <i class="fas {{#if this.collapsed}}fa-chevron-right{{else}}fa-chevron-down{{/if}}"></i>
              <span class="dept-name">{{this.name}}</span>
              <span class="department-badge clickable-rating summary-skill-roll"
                    data-label="{{this.name}} - {{this.primarySkillDisplay}}"
                    data-rating="{{this.ratingNum}}">
                {{this.primarySkillDisplay}}: {{this.rating}}
              </span>
              {{#if this.leaderData}}
              <span class="department-badge clickable-rating summary-skill-roll"
                    data-label="{{this.name}} - Leadership"
                    data-rating="{{this.leaderLeadership}}">
                Ldr: {{this.leaderLeadership}}
              </span>
              {{/if}}
              <span class="department-badge">
                <i class="fas fa-user"></i> {{this.memberCount}}
              </span>
              <span class="department-badge">HP: {{this.avgHealth}}</span>
              <span class="department-badge">Rdy: {{this.avgReadiness}}</span>
            </div>

            <div class="department-content">
              {{!-- Leader Zone --}}
              <div class="dept-leader-section">
                <h4><i class="fas fa-star"></i> Department Leader</h4>
                <div class="dept-leader-zone" data-department="{{this.name}}">
                  {{#if this.leaderData}}
                  <div class="member-card leader-card">
                    <img src="{{this.leaderData.img}}" width="30" height="30" />
                    <span class="member-name">{{this.leaderData.name}}</span>
                    {{#if this.leaderData.isItem}}
                    <span class="leader-type-tag">Personnel</span>
                    {{else}}
                    <span class="leader-type-tag actor-tag">Actor</span>
                    {{/if}}
                    {{#if ../../editable}}
                    <a class="remove-dept-leader" data-department="{{this.name}}" title="Remove Leader"><i class="fas fa-times"></i></a>
                    {{/if}}
                  </div>
                  {{else}}
                  <div class="drop-zone">Drag a character here or promote a member to leader</div>
                  {{/if}}
                </div>
              </div>

              {{!-- Department Members --}}
              <div class="dept-members-section">
                <h4><i class="fas fa-users"></i> Members</h4>
                {{#each this.members}}
                <div class="member-card dept-member-card">
                  <span class="member-name">{{this.name}}</span>
                  <span class="member-skill-level">{{../../primarySkillDisplay}}: {{this.primarySkillValue}}</span>
                  <span class="member-status">HP: {{this.system.health.value}}/{{this.system.health.max}}</span>
                  <span class="member-status">Rdy: {{this.system.readiness.value}}/{{this.system.readiness.max}}</span>
                  {{#if ../../../editable}}
                  <a class="promote-dept-leader" data-department="{{../../name}}" data-item-id="{{this._id}}" title="Promote to Leader"><i class="fas fa-crown"></i></a>
                  <a class="remove-from-department" data-item-id="{{this._id}}" title="Remove from Department"><i class="fas fa-times"></i></a>
                  {{/if}}
                </div>
                {{/each}}
                {{#unless this.members.length}}
                {{#unless this.leaderData}}
                <p class="empty-notice small">No members assigned. Use the Personnel tab to assign crewmembers.</p>
                {{/unless}}
                {{/unless}}
              </div>
            </div>
          </div>
          {{/each}}
        </div>

        {{!-- Units Section --}}
        <div class="org-section">
          <h3><i class="fas fa-shield-alt"></i> Units</h3>

          {{#if editable}}
          <div class="organization-controls">
            <button type="button" class="add-unit" data-unit-type="vehicle"><i class="fas fa-truck"></i> Add Vehicle Unit</button>
            <button type="button" class="add-unit" data-unit-type="infantry"><i class="fas fa-crosshairs"></i> Add Infantry Unit</button>
          </div>
          {{/if}}

          <div class="units-container">
            {{#each units}}
            <div class="unit-panel {{#if this.collapsed}}collapsed{{/if}}" data-unit-index="{{@index}}">
              <div class="unit-header">
                <span class="unit-toggle" data-unit-id="{{this.id}}">
                  <i class="fas {{#if this.collapsed}}fa-chevron-right{{else}}fa-chevron-down{{/if}}"></i>
                </span>
                <span class="unit-type-badge {{this.unitType}}">{{this.unitTypeDisplay}}</span>
                <input type="text" class="unit-name-input" data-unit-index="{{@index}}" value="{{this.name}}" placeholder="Unit Name" />

                {{!-- Skill Summary Badges --}}
                <div class="unit-skill-badges">
                  {{#each this.skillSummary}}
                  <span class="skill-badge summary-skill-roll" data-label="{{../../name}} - {{this.name}}" data-rating="{{this.averageNum}}">
                    {{this.name}}: {{this.average}}
                  </span>
                  {{/each}}
                  {{#if ../leaderData}}
                  <span class="skill-badge-separator">|</span>
                  {{#each this.leaderSkillSummary}}
                  <span class="skill-badge leader-skill-badge summary-skill-roll" data-label="{{../../name}} - {{this.name}} (Leader)" data-rating="{{this.value}}">
                    {{this.name}}: {{this.value}}
                  </span>
                  {{/each}}
                  {{/if}}
                </div>

                <span class="unit-stat-badge">HP: {{this.avgHealth}}</span>
                <span class="unit-stat-badge">Rdy: {{this.avgReadiness}}</span>

                {{#if ../../editable}}
                <button type="button" class="delete-unit" data-unit-index="{{@index}}" title="Delete Unit"><i class="fas fa-trash"></i></button>
                {{/if}}
              </div>

              <div class="unit-content">
                {{!-- Leader Section --}}
                <div class="unit-leader unit-leader-zone">
                  <h4><i class="fas fa-star"></i> Leader</h4>
                  {{#if this.leaderData}}
                  <div class="member-card leader-card">
                    <img src="{{this.leaderData.img}}" width="36" height="36" />
                    <span class="member-name">{{this.leaderData.name}}</span>
                    <span class="member-status">
                      DMG: {{this.leaderData.damage.value}}/{{this.leaderData.damageCapacity}}
                    </span>
                    <span class="member-status">
                      FAT: {{this.leaderData.fatigue.value}}/{{this.leaderData.fatigueCapacity}}
                    </span>
                    {{#if ../../editable}}
                    <a class="remove-leader" data-unit-index="{{@../index}}" title="Remove Leader"><i class="fas fa-times"></i></a>
                    {{/if}}
                  </div>
                  {{else}}
                  <div class="drop-zone">Drag a character here to assign as leader</div>
                  {{/if}}
                </div>

                {{!-- Actor Members --}}
                {{#if this.actorMemberData.length}}
                <div class="unit-members unit-members-zone">
                  <h4><i class="fas fa-users"></i> Character Members</h4>
                  {{#each this.actorMemberData}}
                  <div class="member-card">
                    <img src="{{this.img}}" width="30" height="30" />
                    <span class="member-name">{{this.name}}</span>
                    <span class="member-status">
                      DMG: {{this.damage.value}}/{{this.damageCapacity}}
                    </span>
                    {{#if ../../../editable}}
                    <a class="remove-member" data-unit-index="{{@../../index}}" data-member-index="{{@index}}" title="Remove Member"><i class="fas fa-times"></i></a>
                    {{/if}}
                  </div>
                  {{/each}}
                </div>
                {{/if}}

                {{!-- Personnel Item Members --}}
                {{#if this.personnelMemberData.length}}
                <div class="unit-personnel-members">
                  <h4><i class="fas fa-id-badge"></i> Personnel Members</h4>
                  {{#each this.personnelMemberData}}
                  <div class="member-card">
                    <span class="member-name">{{this.name}}</span>
                    {{#each this.skillLevels}}
                    <span class="member-skill-level">{{@key}}: {{this}}</span>
                    {{/each}}
                    <span class="member-status">HP: {{this.system.health.value}}/{{this.system.health.max}}</span>
                    <span class="member-status">Rdy: {{this.system.readiness.value}}/{{this.system.readiness.max}}</span>
                    {{#if ../../../editable}}
                    <a class="remove-unit-personnel" data-item-id="{{this._id}}" title="Remove from Unit"><i class="fas fa-times"></i></a>
                    {{/if}}
                  </div>
                  {{/each}}
                </div>
                {{/if}}

                {{!-- Drop zone for new members --}}
                <div class="unit-members unit-members-zone">
                  <div class="drop-zone">Drag characters here to add members</div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>

          {{#unless units.length}}
          <p class="empty-notice">Click "Add Vehicle Unit" or "Add Infantry Unit" to create organizational units.</p>
          {{/unless}}
        </div>
      </div>
    </div>

    {{!-- ==================== STATUS TAB ==================== --}}
    <div class="tab" data-tab="status" data-group="primary">
      <div class="tab-content">
        <div class="status-section">
          <h3>Company Status</h3>
          <div class="status-overview">
            <div class="status-item">
              <label>Total Personnel</label>
              <span>{{totalPersonnel}}</span>
            </div>
            <div class="status-item">
              <label>Total Monthly Expenses</label>
              <span>{{totalMonthlyExpenses}} C-Bills</span>
            </div>
            <div class="status-item">
              <label>Available Funds</label>
              <span>{{system.cbills}} C-Bills</span>
            </div>
          </div>
          <div class="company-notes">
            <h3>Notes</h3>
            {{editor enrichedBiography target="system.biography" button=true owner=owner editable=editable}}
          </div>
        </div>
      </div>
    </div>

    {{!-- ==================== LOGISTICS TAB ==================== --}}
    <div class="tab" data-tab="logistics" data-group="primary">
      <div class="tab-content">
        <div class="items-header supplies-header flexrow">
          <div class="item-name flex3">Supply Name</div>
          <div class="item-field flex2">Supply Type</div>
          <div class="item-field flex1">Cost</div>
          <div class="item-field flex1">Quantity</div>
          <div class="item-controls flex1">Controls</div>
        </div>
        <ol class="item-list supplies-list">
          {{#each supplies}}
          <li class="item flexrow" data-item-id="{{this._id}}">
            <div class="item-name flex3">{{this.name}}</div>
            <div class="item-field flex2">{{this.system.supplyType}}</div>
            <div class="item-field flex1">{{this.system.cost}}</div>
            <div class="item-field flex1">{{this.system.quantity}}</div>
            <div class="item-controls flex1">
              <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
              <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
        {{#unless supplies.length}}
        <p class="empty-notice">Drag Supplies items here to add them to logistics.</p>
        {{/unless}}
      </div>
    </div>

    {{!-- ==================== MTOE TAB ==================== --}}
    <div class="tab" data-tab="mtoe" data-group="primary">
      <div class="tab-content">
        <h3>Modified Table of Organization &amp; Equipment</h3>
        <div class="items-header mtoe-header flexrow">
          <div class="item-name flex3">Name</div>
          <div class="item-field flex2">Type</div>
          <div class="item-controls flex1">Controls</div>
        </div>
        <ol class="item-list mtoe-list">
          {{#each mtoeActors}}
          <li class="item flexrow" data-actor-id="{{this.id}}">
            <div class="item-name flex3">
              <img src="{{this.img}}" width="24" height="24" />
              {{this.name}}
            </div>
            <div class="item-field flex2">
              {{#if (eq this.type "vehicle_actor")}}Vehicle{{else}}Ship{{/if}}
            </div>
            <div class="item-controls flex1">
              <a class="mtoe-remove" data-actor-id="{{this.id}}" title="Remove"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
        {{#unless mtoeActors.length}}
        <p class="empty-notice">Drag Vehicle or Ship actors here to add them to the MTOE.</p>
        {{/unless}}
      </div>
    </div>

    {{!-- ==================== ASSETS TAB ==================== --}}
    <div class="tab" data-tab="assets" data-group="primary">
      <div class="tab-content">
        <h3>Company Assets</h3>

        {{!-- Weapons --}}
        {{#if companyAssets.weapon.length}}
        <div class="asset-category">
          <h4 class="category-title">Weapons</h4>
          <div class="items-header flexrow">
            <div class="item-name flex3">Name</div>
            <div class="item-field flex1">Type</div>
            <div class="item-field flex1">AP</div>
            <div class="item-field flex1">BD</div>
            <div class="item-field flex1">Cost</div>
            <div class="item-controls flex1">Controls</div>
          </div>
          <ol class="item-list">
            {{#each companyAssets.weapon}}
            <li class="item flexrow" data-item-id="{{this._id}}">
              <div class="item-name flex3">{{this.name}}</div>
              <div class="item-field flex1">{{this.system.weaponType}}</div>
              <div class="item-field flex1">{{this.system.ap}}{{this.system.apFactor}}</div>
              <div class="item-field flex1">{{this.system.bd}}{{this.system.bdFactor}}</div>
              <div class="item-field flex1">{{this.system.cost}}</div>
              <div class="item-controls flex1">
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
        {{/if}}

        {{!-- Armor --}}
        {{#if companyAssets.armor.length}}
        <div class="asset-category">
          <h4 class="category-title">Armor</h4>
          <div class="items-header flexrow">
            <div class="item-name flex3">Name</div>
            <div class="item-field flex1">Type</div>
            <div class="item-field flex2">BAR (M/B/E/X)</div>
            <div class="item-field flex1">Cost</div>
            <div class="item-controls flex1">Controls</div>
          </div>
          <ol class="item-list">
            {{#each companyAssets.armor}}
            <li class="item flexrow" data-item-id="{{this._id}}">
              <div class="item-name flex3">{{this.name}}</div>
              <div class="item-field flex1">{{this.system.armorType}}</div>
              <div class="item-field flex2">{{this.system.bar.m}}/{{this.system.bar.b}}/{{this.system.bar.e}}/{{this.system.bar.x}}</div>
              <div class="item-field flex1">{{this.system.cost}}</div>
              <div class="item-controls flex1">
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
