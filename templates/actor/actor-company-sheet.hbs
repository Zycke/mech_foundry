<form class="{{cssClass}} mech-foundry company-sheet" autocomplete="off">

  {{!-- Company Header --}}
  <header class="sheet-header company-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="70" width="70" />
    <div class="header-fields">
      <h1 class="company-name">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Company Name" />
      </h1>
      <div class="company-summary">
        <div class="summary-field cbills-field">
          <label>C-Bills</label>
          <div class="cbills-display">
            <span class="cbills-value computed-value">{{system.cbills}}</span>
            {{#if editable}}
            <div class="cbills-controls">
              <button type="button" class="cbills-add" title="Add Funds"><i class="fas fa-plus"></i></button>
              <button type="button" class="cbills-remove" title="Remove Funds"><i class="fas fa-minus"></i></button>
            </div>
            {{/if}}
          </div>
        </div>
        <div class="summary-field">
          <label>Personnel</label>
          <span class="computed-value">{{totalPersonnel}}</span>
        </div>
        <div class="summary-field">
          <label>Monthly Expenses</label>
          <span class="computed-value">{{totalMonthlyExpenses}} C-Bills</span>
        </div>
        <div class="summary-field">
          <label>Reputation</label>
          <input type="text" name="system.reputation" value="{{system.reputation}}" class="reputation-input" />
        </div>
      </div>
    </div>
  </header>

  {{!-- Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="personnel">Personnel</a>
    <a class="item" data-tab="organization">Organization</a>
    <a class="item" data-tab="status">Status</a>
    <a class="item" data-tab="logistics">Logistics</a>
    <a class="item" data-tab="mtoe">MTOE</a>
    <a class="item" data-tab="assets">Assets</a>
    <a class="item" data-tab="finances">Finances</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Personnel Tab --}}
    <div class="tab" data-tab="personnel" data-group="primary">
      <div class="tab-content">
        <div class="items-header personnel-header flexrow">
          <div class="item-name flex3">Name</div>
          <div class="item-field flex1">Qty</div>
          <div class="item-field flex1">Pay Rate</div>
          <div class="item-field flex1">Monthly Cost</div>
          <div class="item-field flex1">Skill (TN)</div>
          <div class="item-field flex1">Veterancy</div>
          <div class="item-field flex1">Health</div>
          <div class="item-field flex1">Readiness</div>
          <div class="item-controls flex1">Controls</div>
        </div>
        <ol class="item-list personnel-list">
          {{#each personnel}}
          <li class="item flexrow" data-item-id="{{this._id}}">
            <div class="item-name flex3">
              <a class="personnel-roll" title="Roll Skill Check">
                <i class="fas fa-dice-d20"></i>
                {{this.name}}
              </a>
            </div>
            <div class="item-field flex1">{{this.system.quantity}}</div>
            <div class="item-field flex1">{{this.system.payRate}}</div>
            <div class="item-field flex1">{{this.monthlyExpense}}</div>
            <div class="item-field flex1">
              {{#if this.system.skillName}}{{this.system.skillName}}{{else}}--{{/if}}
              (TN{{this.system.skillTN}}/{{this.system.skillComplexity}})
            </div>
            <div class="item-field flex1">+{{this.system.veterancy}}</div>
            <div class="item-field flex1">{{this.system.health.value}}/{{this.system.health.max}}</div>
            <div class="item-field flex1">{{this.system.readiness.value}}/{{this.system.readiness.max}}</div>
            <div class="item-controls flex1">
              <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
              <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
        {{#unless personnel.length}}
        <p class="empty-notice">Drag Personnel items here to add them to the company.</p>
        {{/unless}}
      </div>
    </div>

    {{!-- Organization Tab --}}
    <div class="tab" data-tab="organization" data-group="primary">
      <div class="tab-content">
        <div class="organization-controls">
          <button type="button" class="add-unit"><i class="fas fa-plus"></i> Add Unit</button>
        </div>

        <div class="units-container">
          {{#each units}}
          <div class="unit-panel" data-unit-index="{{@index}}">
            <div class="unit-header">
              <input type="text" class="unit-name-input" data-unit-index="{{@index}}" value="{{this.name}}" placeholder="Unit Name" />
              <button type="button" class="delete-unit" data-unit-index="{{@index}}" title="Delete Unit"><i class="fas fa-trash"></i></button>
            </div>

            {{!-- Skill Averages Summary --}}
            {{#if this.skillSummary.length}}
            <div class="unit-skill-summary">
              {{#each this.skillSummary}}
              <span class="skill-badge">
                {{this.name}}: {{this.average}}
                <a class="remove-unit-skill" data-unit-index="{{@../index}}" data-skill-index="{{@index}}" title="Remove Skill"><i class="fas fa-times-circle"></i></a>
              </span>
              {{/each}}
            </div>
            {{/if}}
            <div class="unit-skill-controls">
              <button type="button" class="add-unit-skill" data-unit-index="{{@index}}"><i class="fas fa-plus"></i> Add Skill</button>
            </div>

            {{!-- Leader Section --}}
            <div class="unit-leader unit-leader-zone">
              <h4><i class="fas fa-star"></i> Leader</h4>
              {{#if this.leaderData}}
              <div class="member-card leader-card">
                <img src="{{this.leaderData.img}}" width="36" height="36" />
                <span class="member-name">{{this.leaderData.name}}</span>
                <span class="member-status">
                  DMG: {{this.leaderData.damage.value}}/{{this.leaderData.damageCapacity}}
                </span>
                <span class="member-status">
                  FAT: {{this.leaderData.fatigue.value}}/{{this.leaderData.fatigueCapacity}}
                </span>
                {{#each ../skillSummary}}
                <span class="member-skill-level" title="{{this.name}}">{{this.name}}: {{lookup ../../leaderData.skillLevels this.name}}</span>
                {{/each}}
                <a class="remove-leader" data-unit-index="{{@../index}}" title="Remove Leader"><i class="fas fa-times"></i></a>
              </div>
              {{else}}
              <div class="drop-zone">Drag a character here to assign as leader</div>
              {{/if}}
            </div>

            {{!-- Members Section --}}
            <div class="unit-members unit-members-zone">
              <h4><i class="fas fa-users"></i> Members</h4>
              {{#each this.memberData}}
              <div class="member-card">
                <img src="{{this.img}}" width="30" height="30" />
                <span class="member-name">{{this.name}}</span>
                <span class="member-status">
                  DMG: {{this.damage.value}}/{{this.damageCapacity}}
                </span>
                <span class="member-status">
                  FAT: {{this.fatigue.value}}/{{this.fatigueCapacity}}
                </span>
                {{#each ../../skillSummary}}
                <span class="member-skill-level" title="{{this.name}}">{{this.name}}: {{lookup ../skillLevels this.name}}</span>
                {{/each}}
                <a class="remove-member" data-unit-index="{{@../../index}}" data-member-index="{{@index}}" title="Remove Member"><i class="fas fa-times"></i></a>
              </div>
              {{/each}}
              <div class="drop-zone">Drag characters here to add members</div>
            </div>
          </div>
          {{/each}}
        </div>

        {{#unless units.length}}
        <p class="empty-notice">Click "Add Unit" to create organizational units.</p>
        {{/unless}}
      </div>
    </div>

    {{!-- Status Tab --}}
    <div class="tab" data-tab="status" data-group="primary">
      <div class="tab-content">
        <div class="status-section">
          <h3>Company Status</h3>
          <div class="status-overview">
            <div class="status-item">
              <label>Total Personnel</label>
              <span>{{totalPersonnel}}</span>
            </div>
            <div class="status-item">
              <label>Total Monthly Expenses</label>
              <span>{{totalMonthlyExpenses}} C-Bills</span>
            </div>
            <div class="status-item">
              <label>Available Funds</label>
              <span>{{system.cbills}} C-Bills</span>
            </div>
          </div>
          <div class="company-notes">
            <h3>Notes</h3>
            {{editor enrichedBiography target="system.biography" button=true owner=owner editable=editable}}
          </div>
        </div>
      </div>
    </div>

    {{!-- Logistics Tab --}}
    <div class="tab" data-tab="logistics" data-group="primary">
      <div class="tab-content">
        <div class="items-header supplies-header flexrow">
          <div class="item-name flex3">Supply Name</div>
          <div class="item-field flex2">Supply Type</div>
          <div class="item-field flex1">Cost</div>
          <div class="item-field flex1">Quantity</div>
          <div class="item-controls flex1">Controls</div>
        </div>
        <ol class="item-list supplies-list">
          {{#each supplies}}
          <li class="item flexrow" data-item-id="{{this._id}}">
            <div class="item-name flex3">{{this.name}}</div>
            <div class="item-field flex2">{{this.system.supplyType}}</div>
            <div class="item-field flex1">{{this.system.cost}}</div>
            <div class="item-field flex1">{{this.system.quantity}}</div>
            <div class="item-controls flex1">
              <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
              <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
        {{#unless supplies.length}}
        <p class="empty-notice">Drag Supplies items here to add them to logistics.</p>
        {{/unless}}
      </div>
    </div>

    {{!-- MTOE Tab --}}
    <div class="tab" data-tab="mtoe" data-group="primary">
      <div class="tab-content">
        <h3>Modified Table of Organization &amp; Equipment</h3>
        <div class="items-header mtoe-header flexrow">
          <div class="item-name flex3">Name</div>
          <div class="item-field flex2">Type</div>
          <div class="item-controls flex1">Controls</div>
        </div>
        <ol class="item-list mtoe-list">
          {{#each mtoeActors}}
          <li class="item flexrow" data-actor-id="{{this.id}}">
            <div class="item-name flex3">
              <img src="{{this.img}}" width="24" height="24" />
              {{this.name}}
            </div>
            <div class="item-field flex2">
              {{#if (eq this.type "vehicle_actor")}}Vehicle{{else}}Ship{{/if}}
            </div>
            <div class="item-controls flex1">
              <a class="mtoe-remove" data-actor-id="{{this.id}}" title="Remove"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
        {{#unless mtoeActors.length}}
        <p class="empty-notice">Drag Vehicle or Ship actors here to add them to the MTOE.</p>
        {{/unless}}
      </div>
    </div>

    {{!-- Assets Tab --}}
    <div class="tab" data-tab="assets" data-group="primary">
      <div class="tab-content">
        <h3>Company Assets</h3>

        {{!-- Weapons --}}
        {{#if companyAssets.weapon.length}}
        <div class="asset-category">
          <h4 class="category-title">Weapons</h4>
          <div class="items-header flexrow">
            <div class="item-name flex3">Name</div>
            <div class="item-field flex1">Type</div>
            <div class="item-field flex1">AP</div>
            <div class="item-field flex1">BD</div>
            <div class="item-field flex1">Cost</div>
            <div class="item-controls flex1">Controls</div>
          </div>
          <ol class="item-list">
            {{#each companyAssets.weapon}}
            <li class="item flexrow" data-item-id="{{this._id}}">
              <div class="item-name flex3">{{this.name}}</div>
              <div class="item-field flex1">{{this.system.weaponType}}</div>
              <div class="item-field flex1">{{this.system.ap}}{{this.system.apFactor}}</div>
              <div class="item-field flex1">{{this.system.bd}}{{this.system.bdFactor}}</div>
              <div class="item-field flex1">{{this.system.cost}}</div>
              <div class="item-controls flex1">
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
        {{/if}}

        {{!-- Armor --}}
        {{#if companyAssets.armor.length}}
        <div class="asset-category">
          <h4 class="category-title">Armor</h4>
          <div class="items-header flexrow">
            <div class="item-name flex3">Name</div>
            <div class="item-field flex1">Type</div>
            <div class="item-field flex2">BAR (M/B/E/X)</div>
            <div class="item-field flex1">Cost</div>
            <div class="item-controls flex1">Controls</div>
          </div>
          <ol class="item-list">
            {{#each companyAssets.armor}}
            <li class="item flexrow" data-item-id="{{this._id}}">
              <div class="item-name flex3">{{this.name}}</div>
              <div class="item-field flex1">{{this.system.armorType}}</div>
              <div class="item-field flex2">{{this.system.bar.m}}/{{this.system.bar.b}}/{{this.system.bar.e}}/{{this.system.bar.x}}</div>
              <div class="item-field flex1">{{this.system.cost}}</div>
              <div class="item-controls flex1">
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
        {{/if}}

        {{!-- Ammunition --}}
        {{#if companyAssets.ammo.length}}
        <div class="asset-category">
          <h4 class="category-title">Ammunition</h4>
          <div class="items-header flexrow">
            <div class="item-name flex3">Name</div>
            <div class="item-field flex1">Category</div>
            <div class="item-field flex1">Qty</div>
            <div class="item-field flex1">Cost</div>
            <div class="item-controls flex1">Controls</div>
          </div>
          <ol class="item-list">
            {{#each companyAssets.ammo}}
            <li class="item flexrow" data-item-id="{{this._id}}">
              <div class="item-name flex3">{{this.name}}</div>
              <div class="item-field flex1">{{this.system.ammoCategory}}</div>
              <div class="item-field flex1">{{this.system.quantity.value}}/{{this.system.quantity.max}}</div>
              <div class="item-field flex1">{{this.system.cost}}</div>
              <div class="item-controls flex1">
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
        {{/if}}

        {{!-- Electronics --}}
        {{#if companyAssets.electronics.length}}
        <div class="asset-category">
          <h4 class="category-title">Electronics</h4>
          <div class="items-header flexrow">
            <div class="item-name flex3">Name</div>
            <div class="item-field flex1">Range</div>
            <div class="item-field flex1">Power</div>
            <div class="item-field flex1">Cost</div>
            <div class="item-controls flex1">Controls</div>
          </div>
          <ol class="item-list">
            {{#each companyAssets.electronics}}
            <li class="item flexrow" data-item-id="{{this._id}}">
              <div class="item-name flex3">{{this.name}}</div>
              <div class="item-field flex1">{{this.system.range}}</div>
              <div class="item-field flex1">{{this.system.powerUse}}</div>
              <div class="item-field flex1">{{this.system.cost}}</div>
              <div class="item-controls flex1">
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
        {{/if}}

        {{!-- Healthcare --}}
        {{#if companyAssets.healthcare.length}}
        <div class="asset-category">
          <h4 class="category-title">Healthcare</h4>
          <div class="items-header flexrow">
            <div class="item-name flex3">Name</div>
            <div class="item-field flex1">Charges</div>
            <div class="item-field flex1">Cost</div>
            <div class="item-controls flex1">Controls</div>
          </div>
          <ol class="item-list">
            {{#each companyAssets.healthcare}}
            <li class="item flexrow" data-item-id="{{this._id}}">
              <div class="item-name flex3">{{this.name}}</div>
              <div class="item-field flex1">{{this.system.charges.value}}/{{this.system.charges.max}}</div>
              <div class="item-field flex1">{{this.system.cost}}</div>
              <div class="item-controls flex1">
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
        {{/if}}

        {{!-- Fuel --}}
        {{#if companyAssets.fuel.length}}
        <div class="asset-category">
          <h4 class="category-title">Fuel</h4>
          <div class="items-header flexrow">
            <div class="item-name flex3">Name</div>
            <div class="item-field flex1">Type</div>
            <div class="item-field flex1">Mass</div>
            <div class="item-controls flex1">Controls</div>
          </div>
          <ol class="item-list">
            {{#each companyAssets.fuel}}
            <li class="item flexrow" data-item-id="{{this._id}}">
              <div class="item-name flex3">{{this.name}}</div>
              <div class="item-field flex1">{{this.system.fuelType}}</div>
              <div class="item-field flex1">{{this.system.mass}}</div>
              <div class="item-controls flex1">
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
        {{/if}}

        {{!-- Prosthetics --}}
        {{#if companyAssets.prosthetics.length}}
        <div class="asset-category">
          <h4 class="category-title">Prosthetics</h4>
          <div class="items-header flexrow">
            <div class="item-name flex3">Name</div>
            <div class="item-field flex1">Rating</div>
            <div class="item-field flex1">Cost</div>
            <div class="item-controls flex1">Controls</div>
          </div>
          <ol class="item-list">
            {{#each companyAssets.prosthetics}}
            <li class="item flexrow" data-item-id="{{this._id}}">
              <div class="item-name flex3">{{this.name}}</div>
              <div class="item-field flex1">{{this.system.equipmentRating}}</div>
              <div class="item-field flex1">{{this.system.cost}}</div>
              <div class="item-controls flex1">
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
        {{/if}}

        {{!-- Drugs & Poisons --}}
        {{#if companyAssets.drugpoison.length}}
        <div class="asset-category">
          <h4 class="category-title">Drugs &amp; Poisons</h4>
          <div class="items-header flexrow">
            <div class="item-name flex3">Name</div>
            <div class="item-field flex1">Strength</div>
            <div class="item-field flex1">Cost</div>
            <div class="item-controls flex1">Controls</div>
          </div>
          <ol class="item-list">
            {{#each companyAssets.drugpoison}}
            <li class="item flexrow" data-item-id="{{this._id}}">
              <div class="item-name flex3">{{this.name}}</div>
              <div class="item-field flex1">{{this.system.drugStrength}}</div>
              <div class="item-field flex1">{{this.system.basePrice}}</div>
              <div class="item-controls flex1">
                <a class="item-edit" title="Edit"><i class="fas fa-edit"></i></a>
                <a class="item-delete" title="Delete"><i class="fas fa-trash"></i></a>
              </div>
            </li>
            {{/each}}
          </ol>
        </div>
        {{/if}}

        {{#unless companyAssets.hasItems}}
        <p class="empty-notice">Drag equipment items here to add them as company assets.</p>
        {{/unless}}
      </div>
    </div>

    {{!-- Finances Tab --}}
    <div class="tab" data-tab="finances" data-group="primary">
      <div class="tab-content">
        <div class="finance-controls">
          <button type="button" class="pay-monthly-expenses">
            <i class="fas fa-money-bill-wave"></i> Pay Monthly Expenses ({{totalMonthlyExpenses}} C-Bills)
          </button>
        </div>

        <h3>Transaction History</h3>
        <div class="items-header finance-header flexrow">
          <div class="item-field flex2">Date</div>
          <div class="item-field flex2">Submitted By</div>
          <div class="item-field flex1">Type</div>
          <div class="item-field flex1">Amount</div>
          <div class="item-field flex2">Reason</div>
          <div class="item-field flex1">Balance</div>
          {{#if isGM}}
          <div class="item-controls ledger-controls">Del</div>
          {{/if}}
        </div>
        <ol class="item-list finance-list">
          {{#each financialLedger}}
          <li class="item flexrow ledger-entry {{this.type}}" data-ledger-id="{{this.id}}">
            <div class="item-field flex2">{{this.formattedDate}}</div>
            <div class="item-field flex2">{{this.submittedBy}}</div>
            <div class="item-field flex1 transaction-type">
              {{#if (eq this.type "add")}}
              <span class="funds-add">+ Deposit</span>
              {{else}}
              <span class="funds-remove">- Withdrawal</span>
              {{/if}}
            </div>
            <div class="item-field flex1">{{this.amount}}</div>
            <div class="item-field flex2">{{this.reason}}</div>
            <div class="item-field flex1">{{this.balance}}</div>
            {{#if ../isGM}}
            <div class="item-controls ledger-controls">
              <a class="ledger-delete" data-ledger-id="{{this.id}}" title="Delete Entry"><i class="fas fa-trash"></i></a>
            </div>
            {{/if}}
          </li>
          {{/each}}
        </ol>
        {{#unless financialLedger.length}}
        <p class="empty-notice">No transactions recorded yet.</p>
        {{/unless}}
      </div>
    </div>

  </section>
</form>
