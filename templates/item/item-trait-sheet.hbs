<form class="{{cssClass}} mech-foundry item-sheet trait-sheet" autocomplete="off">
  <header class="sheet-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name">
        <input name="name" type="text" value="{{item.name}}" placeholder="Trait Name"/>
      </h1>
    </div>
  </header>

  <section class="sheet-body">
    <div class="form-group">
      <label>Trait Type</label>
      <select name="system.traitType">
        <option value="positive" {{#if (eq system.traitType "positive")}}selected{{/if}}>Positive</option>
        <option value="negative" {{#if (eq system.traitType "negative")}}selected{{/if}}>Negative</option>
      </select>
    </div>
    <div class="form-row">
      <div class="form-group">
        <label>Trait Points (TP)</label>
        <input type="number" name="system.cost" value="{{system.cost}}" data-dtype="Number"/>
      </div>
      <div class="form-group">
        <label>XP Cost</label>
        <input type="number" name="system.xp" value="{{system.xp}}" min="0" data-dtype="Number"/>
      </div>
      <div class="form-group">
        <label>Page Reference</label>
        <input type="text" name="system.pageRef" value="{{system.pageRef}}" placeholder="e.g., p.123"/>
      </div>
    </div>
    <div class="editor-container">
      <label>Description / Effect</label>
      {{editor system.description target="system.description" button=true owner=owner editable=editable}}
    </div>
  </section>
</form>
