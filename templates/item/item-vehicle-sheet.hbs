<form class="{{cssClass}} mech-foundry item-sheet vehicle-sheet" autocomplete="off">
  <header class="sheet-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name">
        <input name="name" type="text" value="{{item.name}}" placeholder="Vehicle Model/Name"/>
      </h1>
    </div>
  </header>

  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="details">Details</a>
    <a class="item" data-tab="description">Description</a>
  </nav>

  <section class="sheet-body">
    <div class="tab details" data-group="primary" data-tab="details">
      <div class="form-row">
        <div class="form-group">
          <label>Vehicle Type</label>
          <select name="system.vehicleType">
            <option value="hover" {{#if (eq system.vehicleType "hover")}}selected{{/if}}>Hover/WIGE</option>
            <option value="wheeled" {{#if (eq system.vehicleType "wheeled")}}selected{{/if}}>Wheeled/Tracked</option>
            <option value="vtol" {{#if (eq system.vehicleType "vtol")}}selected{{/if}}>Fixed-Wing/VTOL</option>
            <option value="water" {{#if (eq system.vehicleType "water")}}selected{{/if}}>Water</option>
          </select>
        </div>
        <div class="form-group">
          <label>Equipment Rating</label>
          <input type="text" name="system.equipmentRating" value="{{system.equipmentRating}}" placeholder="e.g., C/B-B-A/C"/>
        </div>
        <div class="form-group">
          <label>Cost (C-bills)</label>
          <input type="number" name="system.cost" value="{{system.cost}}" data-dtype="Number" min="0"/>
        </div>
      </div>

      <h3>Armor (Tactical Armor Points)</h3>
      <div class="form-row armor-row">
        <div class="form-group">
          <label>Front</label>
          <input type="number" name="system.armor.front" value="{{system.armor.front}}" data-dtype="Number" min="0"/>
        </div>
        <div class="form-group">
          <label>Side</label>
          <input type="number" name="system.armor.side" value="{{system.armor.side}}" data-dtype="Number" min="0"/>
        </div>
        <div class="form-group">
          <label>Back</label>
          <input type="number" name="system.armor.back" value="{{system.armor.back}}" data-dtype="Number" min="0"/>
        </div>
        <div class="form-group">
          <label>Rotor (VTOL)</label>
          <input type="number" name="system.armor.rotor" value="{{system.armor.rotor}}" data-dtype="Number" min="0"/>
        </div>
        <div class="form-group">
          <label>BAR</label>
          <input type="number" name="system.armor.bar" value="{{system.armor.bar}}" data-dtype="Number" min="0"/>
        </div>
      </div>

      <h3>Fuel & Performance</h3>
      <div class="form-row">
        <div class="form-group">
          <label>Fuel Capacity (kg)</label>
          <input type="number" name="system.fuel.capacity" value="{{system.fuel.capacity}}" data-dtype="Number" min="0"/>
        </div>
        <div class="form-group">
          <label>Fuel Type</label>
          <select name="system.fuel.type">
            <option value="AL" {{#if (eq system.fuel.type "AL")}}selected{{/if}}>AL (Alcohol)</option>
            <option value="B" {{#if (eq system.fuel.type "B")}}selected{{/if}}>B (Battery)</option>
            <option value="H" {{#if (eq system.fuel.type "H")}}selected{{/if}}>H (Hydrogen)</option>
            <option value="P" {{#if (eq system.fuel.type "P")}}selected{{/if}}>P (Petrochemical/ICE)</option>
          </select>
        </div>
        <div class="form-group">
          <label>Range</label>
          <input type="text" name="system.range" value="{{system.range}}" placeholder="e.g., 495KM or 80tp"/>
        </div>
        <div class="form-group">
          <label>Speed</label>
          <input type="text" name="system.speed" value="{{system.speed}}" placeholder="e.g., 97/151 kph"/>
        </div>
      </div>

      <h3>Crew & Cargo</h3>
      <div class="form-row">
        <div class="form-group">
          <label>Crew</label>
          <input type="text" name="system.crew" value="{{system.crew}}" placeholder="e.g., 1"/>
        </div>
        <div class="form-group">
          <label>Passengers</label>
          <input type="text" name="system.passengers" value="{{system.passengers}}" placeholder="e.g., 13"/>
        </div>
        <div class="form-group">
          <label>Cargo (kg)</label>
          <input type="number" name="system.cargo" value="{{system.cargo}}" data-dtype="Number" min="0"/>
        </div>
        <div class="form-group">
          <label>Affiliation</label>
          <input type="text" name="system.affiliation" value="{{system.affiliation}}" placeholder="e.g., LA, CC"/>
        </div>
      </div>

      <div class="form-group full-width">
        <label>Notes</label>
        <input type="text" name="system.notes" value="{{system.notes}}"/>
      </div>
    </div>

    <div class="tab description" data-group="primary" data-tab="description">
      <div class="editor-container">
        {{editor system.description target="system.description" button=true owner=owner editable=editable}}
      </div>
    </div>
  </section>
</form>
