<form class="{{cssClass}} mech-foundry item-sheet personnel-sheet" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" height="50" width="50" />
    <div class="header-fields">
      <h1>
        <input name="name" type="text" value="{{item.name}}" placeholder="Personnel Type Name" />
      </h1>
    </div>
  </header>

  <section class="sheet-body">
    <div class="tab-content">
      {{!-- Core Fields --}}
      <div class="form-group-grid personnel-fields">
        <div class="form-group">
          <label>Quantity</label>
          <input type="number" name="system.quantity" value="{{system.quantity}}" min="0" />
        </div>
        <div class="form-group">
          <label>Pay Rate (per month)</label>
          <input type="number" name="system.payRate" value="{{system.payRate}}" min="0" />
        </div>
      </div>

      {{!-- Skill Fields --}}
      <h3>Skill</h3>
      <div class="form-group-grid personnel-fields">
        <div class="form-group">
          <label>Skill Name</label>
          <input type="text" name="system.skillName" value="{{system.skillName}}" placeholder="e.g., Small Arms" />
        </div>
        <div class="form-group">
          <label>Target Number (TN)</label>
          <input type="number" name="system.skillTN" value="{{system.skillTN}}" min="1" />
        </div>
        <div class="form-group">
          <label>Complexity</label>
          <select name="system.skillComplexity">
            <option value="S" {{#if (eq system.skillComplexity "S")}}selected{{/if}}>Simple (S)</option>
            <option value="C" {{#if (eq system.skillComplexity "C")}}selected{{/if}}>Complex (C)</option>
          </select>
        </div>
      </div>

      {{!-- Veterancy --}}
      <h3>Veterancy</h3>
      <div class="form-group-grid personnel-fields">
        <div class="form-group">
          <label>Veterancy Rank</label>
          <input type="number" name="system.veterancy" value="{{system.veterancy}}" min="0" />
        </div>
      </div>

      {{!-- Health & Readiness --}}
      <h3>Health &amp; Readiness</h3>
      <div class="form-group-grid personnel-fields">
        <div class="form-group">
          <label>Health (Current)</label>
          <input type="number" name="system.health.value" value="{{system.health.value}}" min="0" />
        </div>
        <div class="form-group">
          <label>Health (Max)</label>
          <input type="number" name="system.health.max" value="{{system.health.max}}" min="0" />
        </div>
        <div class="form-group">
          <label>Readiness (Current)</label>
          <input type="number" name="system.readiness.value" value="{{system.readiness.value}}" min="0" />
        </div>
        <div class="form-group">
          <label>Readiness (Max)</label>
          <input type="number" name="system.readiness.max" value="{{system.readiness.max}}" min="0" />
        </div>
      </div>

      {{!-- Description --}}
      <h3>Description</h3>
      <div class="description-field">
        {{editor enrichedDescription target="system.description" button=true owner=owner editable=editable}}
      </div>
    </div>
  </section>
</form>
