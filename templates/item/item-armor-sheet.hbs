<form class="{{cssClass}} mech-foundry item-sheet armor-sheet" autocomplete="off">
  <header class="sheet-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name">
        <input name="name" type="text" value="{{item.name}}" placeholder="Armor Name"/>
      </h1>
    </div>
  </header>

  <section class="sheet-body">
    <div class="form-group">
      <label>Barrier Armor Rating (BAR)</label>
      <input type="number" name="system.bar" value="{{system.bar}}" data-dtype="Number"/>
    </div>
    <div class="form-group">
      <label>Location</label>
      <input type="text" name="system.location" value="{{system.location}}"/>
    </div>
    <div class="form-group">
      <label>
        <input type="checkbox" name="system.equipped" {{#if system.equipped}}checked{{/if}}/>
        Equipped
      </label>
    </div>
    <div class="form-group">
      <label>Notes</label>
      <input type="text" name="system.notes" value="{{system.notes}}"/>
    </div>
    <div class="editor-container">
      <label>Description</label>
      {{editor system.description target="system.description" button=true owner=owner editable=editable}}
    </div>
  </section>
</form>
