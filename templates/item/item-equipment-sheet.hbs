<form class="{{cssClass}} mech-foundry item-sheet equipment-sheet" autocomplete="off">
  <header class="sheet-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name">
        <input name="name" type="text" value="{{item.name}}" placeholder="Equipment Name"/>
      </h1>
    </div>
  </header>

  <section class="sheet-body">
    <div class="form-group">
      <label>Quantity</label>
      <input type="number" name="system.quantity" value="{{system.quantity}}" min="0" data-dtype="Number"/>
    </div>
    <div class="form-group">
      <label>
        <input type="checkbox" name="system.encumbering" {{#if system.encumbering}}checked{{/if}}/>
        Encumbering
      </label>
    </div>
    <div class="form-group">
      <label>Notes</label>
      <input type="text" name="system.notes" value="{{system.notes}}"/>
    </div>
    <div class="editor-container">
      <label>Description</label>
      {{editor system.description target="system.description" button=true owner=owner editable=editable}}
    </div>
  </section>
</form>
